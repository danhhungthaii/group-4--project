              "raw": "{\n  \"username\": \"testuser2\",\n  \"email\": \"test2@example.com\",\n  \"password\": \"12345\",\n  \"fullName\": \"Test User 2\",\n  \"roleId\": \"{{roleId}}\"\n}"
