              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser3\",\n  \"email\": \"test3@example.com\",\n  \"password\": \"password123456\",\n  \"fullName\": \"Test User 3\",\n  \"phoneNumber\": \"abc123\",\n  \"roleId\": \"{{roleId}}\"\n}"
